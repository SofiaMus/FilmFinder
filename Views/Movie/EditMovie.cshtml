@model FilmFinder.Models.Movie

@section title {
    <h1>Edit Movie</h1>
}

<div class="form-container">
    <form asp-action="EditMovie" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="GenreId" class="control-label"></label>
            <select asp-for="GenreId" asp-items="@(new SelectList(ViewBag.Genres, "Id", "Name"))" class="form-control">
                <option value="">Select a genre</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="PictureName" class="control-label"></label>
            <input type="file" name="Picture" class="form-control" />
            <span asp-validation-for="PictureName" class="text-danger"></span>
            <img src="@Url.Content($"~/images/{Model.PictureName}")" alt="Current Picture" class="img-fluid" style="width: 200px; margin-top: 10px;" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control" type="number" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
